{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./src", // Позволяет использовать пути от src
    "paths": {
      "@/*": ["*"] // Алиас для путей: import ... from '@/...'
    },
    "experimentalDecorators": true, // Если планируете использовать декораторы
    "emitDecoratorMetadata": true   // Если планируете использовать декораторы
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"] // Исключаем node_modules и тестовые файлы
}